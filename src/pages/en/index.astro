---
import i18next, { changeLanguage, t } from "i18next";
import Layout from "../../layouts/Layout.astro";
import Marquee from "../../components/Marquee.astro";
import { partners } from "../../logos_partners";
import { Suscribe } from "../../components/Suscribe";
import Categories from "../../components/Categories.astro";
import { gallery2023 } from "../../constants_gallery";
import LightBox from "../../components/LightBox.jsx";
import Testimonials from "../../components/Testimonials.astro";

changeLanguage("en");
---

<Layout title='Agrotech'>
  <main>
    <section class='relative h-screen'>
      <video
        class='absolute w-screen h-screen z-[-1]'
        muted
        loop
        autoplay
        playsinline
      >
        <source src='/agrotechmexico/agrotech-2024.mp4' type='video/mp4' />
      </video>
      <div class='flex items-center h-full'>
        <div class='container mx-auto px-4'>
          <img
            src='/agrotechmexico/img/logo_agro_color.webp'
            alt='Logo Agrotech'
            class='filter-shadow'
            width='350'
            height='77'
          />
          <p class='text-white font-bold home-text-agro text-2xl pt-10'>
            {t('home.title')}
          </p>
          <p class='text-white font-bold home-text-agro text-2xl pt-2'>
            {t('home.event_date')}
          </p>
          <img
            src='/agrotechmexico/img/igecoLogo.webp'
            alt='Igeco'
            width='200'
            height='32'
            class='filter-shadow pt-16'
          />
        </div>
      </div>
    </section>
    <article>
      <div
        class='container mx-auto mt-10 p-4 grid grid-cols-1 md:grid-cols-2 gap-3 items-center place-items-center'
      >
        <img
          class='rounded-3xl'
          src='/agrotechmexico/img/AgrotechHome-2.webp'
          alt='Agrotech'
          width='500'
          height='300'
          loading='lazy'
        />
        <p class='text-lg text-justify' set:html={t('home.description')} />
      </div>
      <p class='mt-10 text-center font-extrabold text-3xl'>
        {t('why-exhibit.title')}
      </p>
      <div
        class='container mx-auto mt-10 p-4 grid md:grid-cols-2 place-items-center items-center'
      >
        <ul class='mt-10 space-y-4 text-left text-gray-500 text-lg'>
          <li class='flex items-center space-x-3 rtl:space-x-reverse'>
            <svg
              class='flex-shrink-0 w-3.5 h-3.5 text-green-500'
              aria-hidden='true'
              xmlns='http://www.w3.org/2000/svg'
              fill='none'
              viewBox='0 0 16 12'
            >
              <path
                stroke='currentColor'
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M1 5.917 5.724 10.5 15 1.5'></path>
            </svg>
            <span>{t('why-exhibit.reason_6')}</span>
          </li>
          <li class='flex items-center space-x-3 rtl:space-x-reverse'>
            <svg
              class='flex-shrink-0 w-3.5 h-3.5 text-green-500'
              aria-hidden='true'
              xmlns='http://www.w3.org/2000/svg'
              fill='none'
              viewBox='0 0 16 12'
            >
              <path
                stroke='currentColor'
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M1 5.917 5.724 10.5 15 1.5'></path>
            </svg>
            <span>{t('why-exhibit.reason_7')}</span>
          </li>
          <li class='flex items-center space-x-3 rtl:space-x-reverse'>
            <svg
              class='flex-shrink-0 w-3.5 h-3.5 text-green-500'
              aria-hidden='true'
              xmlns='http://www.w3.org/2000/svg'
              fill='none'
              viewBox='0 0 16 12'
            >
              <path
                stroke='currentColor'
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M1 5.917 5.724 10.5 15 1.5'></path>
            </svg>
            <span>{t('why-exhibit.reason_8')}</span>
          </li>
          <li class='flex items-center space-x-3 rtl:space-x-reverse'>
            <svg
              class='flex-shrink-0 w-3.5 h-3.5 text-green-500'
              aria-hidden='true'
              xmlns='http://www.w3.org/2000/svg'
              fill='none'
              viewBox='0 0 16 12'
            >
              <path
                stroke='currentColor'
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M1 5.917 5.724 10.5 15 1.5'></path>
            </svg>
            <span>{t('why-exhibit.reason_9')}</span>
          </li>
        </ul>
        <img
          src='/agrotechmexico/img/whyexhibit.webp'
          alt='AgroTech México Exhibit'
          width='450'
          height='300'
          loading='lazy'
        />
      </div>
      <dl
        class='mt-10 grid place-content-center text-center max-w-screen-xl grid-cols-2 gap-8 p-4 mx-auto text-gray-900 sm:grid-cols-3 xl:grid-cols-5'
      >
        <div class='flex flex-col items-center justify-start'>
          <dt class='mb-2 text-3xl font-extrabold'>+5,000</dt>
          <dd class='text-gray-500' set:html={t('why-exhibit.reason_1')} />
        </div>
        <div class='flex flex-col items-center justify-start'>
          <dt class='mb-2 text-3xl font-extrabold'>10,200 m2</dt>
          <dd class='text-gray-500' set:html={t('why-exhibit.reason_2')} />
        </div>
        <div class='flex flex-col items-center justify-start'>
          <dt class='mb-2 text-3xl font-extrabold'>+100</dt>
          <dd class='text-gray-500' set:html={t('why-exhibit.reason_3')} />
        </div>
        <div class='flex flex-col items-center justify-start'>
          <dt class='mb-2 text-3xl font-extrabold'>+158 MDP</dt>
          <dd class='text-gray-500' set:html={t('why-exhibit.reason_4')} />
        </div>
        <div class='flex flex-col items-center justify-start'>
          <dt class='mb-2 text-3xl font-extrabold'>+1 MDP</dt>
          <dd class='text-gray-500' set:html={t('why-exhibit.reason_5')} />
        </div>
      </dl>
      <p class='text-center'>{t('home.collaboration')}</p>
      <div class='grid sm:flex justify-center mt-10'>
        <a
          class='text-black font-bold hover:bg-[#8BBF20] hover:text-white rounded-lg text-lg px-5 py-2.5 text-center me-2 mb-2 flex items-center'
          href={i18next.language === 'en'
            ? '/agrotechmexico/files/AGROTECH_FACTSHEET_2024_EN_v120124.pdf'
            : '/agrotechmexico/files/AGROTECH_FACTSHEET_2024_ES_v120124.pdf'}
          target='_blank'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            fill='none'
            viewBox='0 0 24 24'
            stroke-width='1.5'
            stroke='currentColor'
            class='w-6 h-6'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              d='M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25M9 16.5v.75m3-3v3M15 12v5.25m-4.5-15H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z'
            ></path>
          </svg> Factsheet Agrotech 2024
        </a>
        <a
          class='text-black font-bold hover:bg-[#8BBF20] hover:text-white font-bolf rounded-lg text-lg px-5 py-2.5 text-center me-2 mb-2 flex items-center'
          href='/agrotechmexico/files/AGROTECH-2024-141223-V3-Model.pdf'
          target='_blank'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            fill='none'
            viewBox='0 0 24 24'
            stroke-width='1.5'
            stroke='currentColor'
            width='30'
            ><path
              stroke-linecap='round'
              stroke-linejoin='round'
              d='M2.25 7.125C2.25 6.504 2.754 6 3.375 6h6c.621 0 1.125.504 1.125 1.125v3.75c0 .621-.504 1.125-1.125 1.125h-6a1.125 1.125 0 01-1.125-1.125v-3.75zM14.25 8.625c0-.621.504-1.125 1.125-1.125h5.25c.621 0 1.125.504 1.125 1.125v8.25c0 .621-.504 1.125-1.125 1.125h-5.25a1.125 1.125 0 01-1.125-1.125v-8.25zM3.75 16.125c0-.621.504-1.125 1.125-1.125h5.25c.621 0 1.125.504 1.125 1.125v2.25c0 .621-.504 1.125-1.125 1.125h-5.25a1.125 1.125 0 01-1.125-1.125v-2.25z'
            ></path></svg
          >
          {t('menu.option2.subMenu.option4')}
        </a>
        <a
          class='text-black font-bold hover:bg-[#8BBF20] hover:text-white rounded-lg text-lg px-5 py-2.5 text-center me-2 mb-2 flex items-center'
          href='/agrotechmexico/files/AGROTECH-CONTRACT-2024.pdf'
          target='_blank'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            fill='none'
            viewBox='0 0 24 24'
            stroke-width='1.5'
            stroke='currentColor'
            class='w-6 h-6'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              d='M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z'
            ></path>
          </svg>
          {t('menu.option2.subMenu.option5')}
        </a>
      </div>
    </article>
    <Testimonials />
    <section class='mt-20'>
      <Categories />
      <div class='mt-20 container mx-auto'>
        <h1 class='font-extrabold text-4xl text-agro-green text-center'>
          AgroTech México 2023
        </h1>
        <LightBox images={gallery2023} client:visible />
      </div>
      <Marquee partners={partners} title='Media Partners' />
    </section>
    <Suscribe
      title={t('home.suscribe_title')}
      description={t('home.description_suscribe')}
      suscribe_label={t('home.suscribe_label')}
      button={t('home.suscribe_button')}
      client:only
    />
  </main>
</Layout>
<style>
  video {
    object-fit: cover;
    object-position: left;
  }
  .home-text-agro {
    text-shadow: 4px 4px 4px black;
  }
  .filter-shadow {
    filter: drop-shadow(4px 4px 4px black);
  }
</style>
