---
import i18next, { changeLanguage, t } from "i18next";
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/Card.astro";
import Marquee from "../../components/Marquee.astro";
import { partners } from "../../logos_partners";
import Suscribe from "../../components/Suscribe.astro";

changeLanguage("en");
---

<Layout title="Agrotech">
  <main>
    <section class="relative h-screen">
      <video
        class="absolute w-screen h-screen z-[-1]"
        muted
        loop
        autoplay
        playsinline
        poster="/img/posterAgrotech.webp"
      >
        <source src="/video_agro.mp4" type="video/mp4" />
      </video>
      <div class="flex items-center h-full">
        <div class="container mx-auto px-4">
          <img
            src="/img/logo_agro_color.webp"
            alt="Logo Agrotech"
            class="filter-shadow"
            width="350"
            height="77"
          />
          <p class="text-white font-bold home-text-agro text-2xl pt-10">
            {t("home.title")}
          </p>
          <p class="text-white font-bold home-text-agro text-2xl pt-2">
            {t("home.event_date")}
          </p>
          <img
            src="/img/igecoLogo.webp"
            alt="Igeco"
            width="200"
            height="32"
            class="filter-shadow pt-16"
          />
        </div>
      </div>
    </section>
    <article>
      <div
        class="container mx-auto mt-10 p-4 grid grid-cols-1 md:grid-cols-2 gap-3 items-center place-items-center"
      >
        <img
          class="rounded-3xl"
          src="/img/agrotechHome1.webp"
          alt="Agrotech"
          width="500"
          height="300"
        />
        <p set:html={t("home.description")} />
      </div>
      <p class="mt-10 text-center font-extrabold text-3xl">
        {t("why-exhibit.title")}
      </p>
      <dl
        class="mt-10 grid place-content-center text-center max-w-screen-xl grid-cols-2 gap-8 p-4 mx-auto text-gray-900 sm:grid-cols-3 xl:grid-cols-5"
      >
        <div class="flex flex-col items-center justify-start">
          <dt class="mb-2 text-3xl font-extrabold">+3,000</dt>
          <dd
            class="text-gray-500 dark:text-gray-400"
            set:html={t("why-exhibit.reason_1")}
          />
        </div>
        <div class="flex flex-col items-center justify-start">
          <dt class="mb-2 text-3xl font-extrabold">10,000 m2</dt>
          <dd
            class="text-gray-500 dark:text-gray-400"
            set:html={t("why-exhibit.reason_2")}
          />
        </div>
        <div class="flex flex-col items-center justify-start">
          <dt class="mb-2 text-3xl font-extrabold">100</dt>
          <dd
            class="text-gray-500 dark:text-gray-400"
            set:html={t("why-exhibit.reason_3")}
          />
        </div>
        <div class="flex flex-col items-center justify-start">
          <dt class="mb-2 text-3xl font-extrabold">+158 MDP</dt>
          <dd
            class="text-gray-500 dark:text-gray-400"
            set:html={t("why-exhibit.reason_4")}
          />
        </div>
        <div class="flex flex-col items-center justify-start">
          <dt class="mb-2 text-3xl font-extrabold">+1 MDP</dt>
          <dd
            class="text-gray-500 dark:text-gray-400"
            set:html={t("why-exhibit.reason_5")}
          />
        </div>
      </dl>
      <div class="flex justify-center mt-10">
        <a
          class="text-white bg-[#8BBF20] hover:bg-gray-800 ont-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 flex items-center"
          href={i18next.language === "en"
            ? "/files/AGROTECH-FACTSHEET-EN-2024.pdf"
            : "/files/AGROTECH-FACTSHEET-2024.pdf"}
          target="_blank"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25M9 16.5v.75m3-3v3M15 12v5.25m-4.5-15H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"
            ></path>
          </svg> Factsheet Agrotech 2024
        </a>
      </div>
    </article>
    <section class="container mx-auto mt-10">
      <p class="text-center font-bold text-2xl">{t("home.title_2")}</p>
      <div
        class="mt-5 grid justify-center 2xl:grid-cols-3 lg:grid-cols-2 gap-8"
      >
        <Card
          title={t("home.category_1")}
          body={t("home.category_1_description")}
          img="categorybg1.webp"
        />
        <Card
          title={t("home.category_2")}
          body={t("home.category_2_description")}
          img="categorybg2.webp"
        />
        <Card
          title={t("home.category_3")}
          body={t("home.category_3_description")}
          img="categorybg3.webp"
        />
        <Card
          title={t("home.category_4")}
          body={t("home.category_4_description")}
          img="categorybg4.webp"
        />
        <Card
          title={t("home.category_5")}
          body={t("home.category_5_description")}
          img="categorybg5.webp"
        />
        <Card
          title={t("home.category_6")}
          body={t("home.category_6_description")}
          img="categorybg6.webp"
        />
      </div>

      <Marquee partners={partners} title="Media Partners" />
    </section>
    <Suscribe />
  </main>
</Layout>
<style>
  video {
    object-fit: cover;
    object-position: left;
  }
  .home-text-agro {
    text-shadow: 4px 4px 4px black;
  }
  .filter-shadow {
    filter: drop-shadow(4px 4px 4px black);
  }
</style>
