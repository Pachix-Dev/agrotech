---
import Layout from "../layouts/Layout.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("es");
---

<Layout title="Services Agrotech">
  <section class="container mx-auto mt-10 mb-10">
    <i>AgroTech MÃ©xico</i>
