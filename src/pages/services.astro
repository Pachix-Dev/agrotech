    <div class="mt-10 grid lg:grid-cols-3 sm:grid-cols-2 gap-5">
      <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow">
        <img
          class="rounded-t-lg"
          src="/img/kit-de-banquetes-2023.webp"
          alt=""
        />
