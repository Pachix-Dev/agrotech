---
interface Props {
  title: string;
  body: string;
  img: string;
}

const { title, body, img } = Astro.props;
---

<div
  class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700"
>
  <img
    class="object-cover object-center w-full rounded-t-lg h-full sm:h-80 md:w-48 md:rounded-none md:rounded-s-lg"
    src=`/img/${img}`
    alt={title}
  />
  <div class="flex flex-col justify-between p-4 leading-normal">
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
      {title}
    </h5>
    <p class="mb-3 font-normal text-gray-700" set:html={body} />
  </div>
</div>
